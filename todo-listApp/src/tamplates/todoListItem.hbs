<li class="todo-list__item" data-id="{{id}}">
    <div class="item__priority priority-{{priority}}">{{priority}}</div>
    <h3 class="item__title">{{title}}</h3>
    <p class="item__desc">{{description}}</p>
    <div class="item__controls">
        <button class="controls__complete-btn" data-action="completeTask">completed</button>
        <button class="controls__delete-btn" data-id="{{id}}">delete</button>
    </div>
</li>